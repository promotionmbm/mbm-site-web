extends  ../_skeleton

//- Includes
include ../components/_ui-progress-bar-linear
include ../components/_ui-countdown

block variables
	- var activeCategory = 'elements'
	- var pageName = 'Progress Bars'

block page  
	// Page Header
	+header-classic: include ../includes/_aside-navbar-classic

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'bg-blog-2'
	})

	// Section Skill Bars and Time Circles
	section.section.section-xl.bg-default
		.container
			.row.row-50.align-items-center.justify-content-center.justify-content-xl-between
				.col-md-10.col-lg-6
					+progress-bar-linear({
						title: "Dedication",
						valueTo: "78"
					})

					+progress-bar-linear({
						mod: 'progress-red',
						title: "Knowledge",
						valueTo: "69"
					})

					+progress-bar-linear({
						mod: 'progress-yellow',
						title: "Professionalism",
						valueTo: "78"
					})

				.col-lg-6
					+countdown({
						mod: 'justify-content-xl-end',
						from: '2019-05-25',
						to: '2019-07-31',
						array: [ 'Days', 'Hours', 'Minutes' ]
					})
	='\n'

	// Page Footer
	+footer-classic
